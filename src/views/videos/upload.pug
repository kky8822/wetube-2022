extends ../base

block content
    div.upload__container
        div.upload__video
            video#preview
            button#actionBtn.social__btn Start Recording
        if errorMessage 
            span=errorMessage
        form(method="POST", enctype="multipart/form-data").upload__form
            label(for="video") Video File
            input(name="video", id="video", type="file", accept="video/*", required)
            label(for="thumb") Thumbnail File
            input(name="thumb", id="thumb", type="file", accept="image/*", required)
            input(name="title", placeholder="Title", type="text", required, maxlength=80)
            input(name="description", placeholder="Description", type="text", required, minlength=20)
            input(name="hashtags", placeholder="Hashtags, seperated by comma.", type="text", required)
            input(value="Save",type="submit")
block scripts
    script(src="/static/js/videoRecoder.js") 
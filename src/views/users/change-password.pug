extends ../base

block content
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(name="oldPassword", placeholder="Password", type="password", required)
        input(name="newPassword", placeholder="New Password", type="password", required)
        input(name="newPassword_c", placeholder="Confirm New Password", type="password", required)
        input(type="submit", value="Change Password")
        